model: gpt-4o-mini
temperature: 0.2
max_tokens: 300

system: |
  You are a data scientist evaluating resume-to-job relevance.
  Return:
  1. A relevance score from 0 to 100
  2. A short justification
  3. Key matching skills identified

tests:
  - input:
      resume: "Data analyst with Python, SQL, Tableau, and data visualization experience"
      job: "Junior data analyst role requiring Python, SQL, and dashboarding skills"

evaluation:
  metrics:
    - relevance
    - groundedness
    - consistency
